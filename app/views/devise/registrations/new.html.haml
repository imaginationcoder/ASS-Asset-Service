- page_title 'Register'
.row
  .col.s12.m4.offset-m4
    %h5.center Create new account
    .z-depth-1.row{:style => "display: inline-block; padding: 20px 20px 0px 20px; border: 1px solid #EEE;"}
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render 'shared/error_messages', resource: resource
        .row
          .col.s12
            .row
              .input-field.col.s12
                %input#full_name.validate{:type => "text", :name => "user[full_name]"}/
                %label{:for => "full_name"} Full Name
              .input-field.col.s12
                %input#email.validate{:type => "email", :name => "user[email]"}/
                %label{:for => "email"} Email
              .input-field.col.s12
                %input#company.validate{:type => "text", :name => "user[company]"}/
                %label{:for => "company"} Company
              .input-field.col.s12
                %input#password.validate{:type => "password", :name => "user[password]"}/
                %label{:for => "password"} Password
              .input-field.col.s12
                %input#password_confirmation.validate{:type => "password", :name => "user[password_confirmation]"}/
                %label{:for => "password_confirmation"} Password confirmation
              .col.s12
                %p
                  %input#filled-in-box.validate.filled-in{:type => "checkbox", :name => "user[remember_me]"}/
                  %label{:for => "filled-in-box"} I agree to the
                  %a{:href => "#"} terms

              .col.s12
                %p.center
                  %button.waves-effect.waves-light.btn.cyan{"data-loading-text"=>btn_prog_text('Register'),:type => "submit"} Register
      .row
        .col.s12
          %a.btn.btn-block.btn-social.btn-github.btn-flat{:href => user_omniauth_authorize_path(:github)}
            Sign up using Github
      .row
        .col.s12.center
          Already have a ASS SDK account?
          %a.text-center{:href => new_session_path(resource_name)} Login here