- page_title 'Register'
.container
  .row.text-justify
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .middlePage.col-md-6.col-md-offset-6
        .page-header.text-center
          %h3.logo
            = link_to image_tag('small-logo-green.png') , root_path
        .row
          .col-sm-12
            = render 'shared/error_messages', resource: resource
        .panel.panel-info
          .panel-heading
            %h3.panel-title Please Register
          .panel-body
            .row
              .col-sm-12
                %fieldset
                  .row
                    .col-sm-6
                      .form-group
                        = f.text_field :fname,  class: 'form-control', required: true, placeholder: 'First Name'
                    .col-sm-6
                      .form-group
                        = f.text_field :lname,  class: 'form-control', placeholder: 'Last Name'
                  .row
                    .col-sm-6
                      .form-group
                        = f.email_field :email,  class: 'form-control', required: true, placeholder: 'Email'
                    .col-sm-6
                      .form-group
                        = f.text_field :company,  class: 'form-control', placeholder: 'Company Name'
                  .row
                    .col-sm-6
                      .form-group
                        = f.password_field :password,  class: 'form-control', required: false, placeholder: 'Password'
                    .col-sm-6
                      .form-group
                        = f.password_field :password_confirmation,  class: 'form-control', required: false, placeholder: 'Confirm Password'
                  .spacing
                  .row
                    .col-sm-12
                      .form-group
                        Have an account?
                        %a{href: new_session_path(resource_name)}
                          %small Login
            .row
              .col-sm-12.pull-right
                = f.submit 'Sign up', class: 'btn btn-info btn-sm pull-right hello'
