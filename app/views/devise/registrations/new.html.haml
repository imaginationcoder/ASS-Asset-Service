- page_title 'Register'
%body.hold-transition.register-page
  .register-box
    .register-logo
      %a{:href => root_url}
        %b> ASS
        SDK
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render 'shared/error_messages', resource: resource
      .register-box-body
        %p.login-box-msg Register a new membership
        .form-group.has-feedback
          = f.text_field :full_name,  class: 'form-control', required: true, placeholder: 'Full Name'
          %span.glyphicon.glyphicon-user.form-control-feedback
        .form-group.has-feedback
          = f.email_field :email,  class: 'form-control', required: true, placeholder: 'Email'
          %span.glyphicon.glyphicon-envelope.form-control-feedback
        .form-group.has-feedback
          = f.text_field :company,  class: 'form-control', placeholder: 'Company'
          %span.form-control-feedback
            %i.fa.fa-users
        .form-group.has-feedback
          = f.password_field :password,  class: 'form-control', placeholder: 'Password'
          %span.glyphicon.glyphicon-lock.form-control-feedback
        .form-group.has-feedback
          = f.password_field :password_confirmation,  class: 'form-control', required: false, placeholder: 'Retype Password'
          %span.glyphicon.glyphicon-log-in.form-control-feedback
        .row
          .col-xs-8
            .checkbox.icheck
              %label
                %input{:type => "checkbox"}/
                I agree to the
                %a{:href => "#"} terms
          .col-xs-4
            %button.btn.btn-primary.btn-block.btn-flat.btn-progress{"data-loading-text"=>btn_prog_text('Register'),:type => "submit"} Register
        .social-auth-links.text-center
          %p - OR -
          %a.btn.btn-block.btn-social.btn-github.btn-flat{:href => "#"}
            %i.fa.fa-github
            Sign up using
            GitHub
          %a.btn.btn-block.btn-social.btn-google.btn-flat{:href => "#"}
            %i.fa.fa-google-plus
            Sign up using
            Google+
        %a.text-center{:href => new_session_path(resource_name)} I already have a membership
