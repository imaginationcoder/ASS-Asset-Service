.box.box-primary.nested-fields
  .box-header.with-border
    %h3.box-title.text-light-blue
      Step
      %span.tour-step-number 1
    .box-tools.pull-right
      %button.btn.btn-box-tool{ data:{ 'original-title'=> 'Collapse',toggle: 'tooltip', widget: 'collapse'}}
        %i.fa.fa-minus
      = link_to_remove_association f ,title: 'Remove',class: 'btn btn-danger btn-sm',data: { toggle: 'tooltip' } do
        %i.fa.fa-times
  .box-body


-#.row.text-center.nested-fields
  = f.hidden_field :permission_id, value: @permission.id
  = f.hidden_field :app_id, value: @app.id
  = f.hidden_field :platform_category_id, value: @platform_categories.first.id
  .col-xs-12
    .row
      .cols-xs-6.col-md-6
        Step 1
      .col-sm-6.col-md-6
        = link_to_remove_association "- remove", f
    .row
      .cols-xs-12.text-center
        %strong Image Assets
    .row.text-center
      .col-sm-12
        %a{href: "#"}
          %img.img-thumbnail#source-preview{width: 100, height: 100, src: 'http://placehold.it/100x100&text=Browse'}/
        %label.btn.btn-default.btn-file{style: 'margin-left: 10px;'}
          Choose..
          = f.file_field :source , style: 'display: none;'
      .row.text_assets_fields
        .col-sm-12.text-center
          %strong Text Assets
        .col-sm-12
          = f.fields_for :text_assets, @text_assets, :wrapper => 'inline' do |text_asset|
            = render 'text_asset_fields', f: text_asset
        .links
          = link_to_add_association 'add text asset', f, :text_assets, :render_options => { :wrapper => 'inline' }
      .row.button_actions_fields
        .col-sm-12.text-center
          %strong Actions
        .col-sm-12
          = f.fields_for :button_actions, @button_actions, :wrapper => 'inline' do |button_action|
            = render 'button_action_fields', f: button_action
        .links
          = link_to_add_association 'add text asset', f, :button_actions, :render_options => { :wrapper => 'inline' }