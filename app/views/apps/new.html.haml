= page_title('Create App')
.row
  .col-lg-12
    .page-heading.text-center Create App
.row.text-center
  .col-md-8.col-md-offset-2.col-sm-12
    = form_for(@app) do |f|
      = f.hidden_field :platform_id, value: @default_platform.id
      - if @app.errors.any?
        .row
          .col-sm-12
            = render 'shared/error_messages', resource: @app
      .row
        .col-sm-12
          .form-group
            %a{href: "#"}
              %img.img-thumbnail#source-preview{width: 100, height: 100, src: 'http://placehold.it/100x100&text=Logo'}/
            %label.btn.btn-default.btn-file{style: 'margin-left: 10px;'}
              Choose..
              = f.file_field :logo , style: 'display: none;'
              %span.label.label-info
      .row
        .col-sm-12
          .form-group
            = f.text_field :name, placeholder: 'Your app name*' , class: 'form-control'
      .row
        .col-sm-12
          .form-group
            = f.text_area :description, placeholder: 'App Description' , class: 'form-control'
      .row
        .col-sm-12
          %strong Platform(s)
      .row
        .col-sm-12{style: 'margin: 10px;'}
          .form-group.platform-images
            = image_tag 'platform-ios.png', width: 100, height: 100
            %span.ios
              %i.fa.fa-check.fa-fw
            = image_tag 'platform-android-grey.png', width: 100, height: 100
            %span.android
              %i.fa.fa-check.fa-fw
      .row
        .col-md-2.col-md-offset-4.text-center.col-sm-6
          %a.btn.btn-primary{href: my_apps_path} CANCEL
        .col-md-2.text-center.col-sm-6
          %button.btn.btn-primary SAVE




