= page_title('Edit App')
.row
  .col-lg-12
    .page-heading.text-center Update App
.row.text-center
  .col-md-8.col-md-offset-2.col-sm-12
    = form_for(@app) do |f|
      - if @app.errors.any?
        .row
          .col-sm-12
            = render 'shared/error_messages', resource: @app
      .row
        .col-sm-12
          .form-group
            %a{href: "#"}
              %img.img-thumbnail#source-preview{width: 100, height: 100, src: @app.logo_url}/
            %label.btn.btn-default.btn-file{style: 'margin-left: 10px;'}
              Choose..
              = f.file_field :logo , style: 'display: none;'
              %span.label.label-info
      .row
        .col-sm-12
          .form-group
            = f.text_field :name, placeholder: 'Your app name*' , class: 'form-control'
      .row
        .col-sm-12
          .form-group
            = f.text_area :description, placeholder: 'App Description' , class: 'form-control'
      .row
        .col-md-3.col-md-offset-3.col-xs-6.text-center
          %a.btn.btn-primary{href: app_path(@app)} CANCEL
        .col-md-4.col-xs-6.col-md-pull-1.text-center
          %button.btn.btn-primary Update