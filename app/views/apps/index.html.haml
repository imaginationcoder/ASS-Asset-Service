.container
  .card-panel
    .row
      .col.s12
        .row
          .col.s6
            %b My Apps
          .col.s6.right-align
            %a.waves-effect.waves-light.btn{href: new_app_path }
              %i.material-icons.left add
              New
        .divider
        %br
          .row
            - @apps.each  do |app|
              .col.s12.m6
                .card.blue-grey.darken-1
                  .card-content.white-text
                    %span.card-title
                      %strong= app.name
                    %p
                      .row
                        .col.s12.m6
                          ClientId:
                          %br
                            = app.client_id
                      .row
                        .col.s12.m6
                          Secret:
                          %br
                            = app.secret_token
                  .card-action
                    %a.waves-effect.waves-light{:href => "#"} Edit
                    %a.waves-effect.waves-light.right-align{:href => "#"} Delete